@using organProject.Models;
@model NewDonorWrap;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Donor</title>
</head>
<body>
    <div class="">
        <h1>Add Donor Here</h1>
        <div class="form">
            <form asp-action="/add/donor" method="post">
                <span asp-validation-for="@Model.NewDonor.FirstName"></span>
                <br>
                <label asp-for="@Model.NewDonor.FirstName"></label>
                <input asp-for="@Model.NewDonor.FirstName">
                <br>
                <span asp-validation-for="@Model.NewDonor.LastName"></span>
                <br>
                <label asp-for="@Model.NewDonor.LastName"></label>
                <input asp-for="@Model.NewDonor.LastName">
                <br>
                <span asp-validation-for="@Model.NewDonor.DOB"></span>
                <br>
                <label asp-for="@Model.NewDonor.DOB"></label>
                <input asp-for="@Model.NewDonor.DOB">
                <br>
                <span asp-validation-for="@Model.NewDonor.BloodType"></span>
                <br>
                <label asp-for="@Model.NewDonor.BloodType"></label>
                <select asp-for="@Model.NewDonor.BloodType" >
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">AB</option>
                    <option value="O">O</option>
                </select>
                <input asp-for="@Model.NewDonor.BloodType">
                <br>
                <span asp-validation-for="@Model.NewDonor.Rh"></span>
                <br>
                <label asp-for="@Model.NewDonor.Rh"></label>
                <input asp-for="@Model.NewDonor.Rh">
                <br>
                <span asp-validation-for="@Model.NewDonor.Registered"></span>
                <br>
                <label asp-for="@Model.NewDonor.Registered"></label>
                <input asp-for="@Model.NewDonor.Registered">
                <br>
                <span asp-validation-for="@Model.NewDonor.Consent"></span>
                <br>
                <label asp-for="@Model.NewDonor.Consent"></label>
                <input asp-for="@Model.NewDonor.Consent">
                <br>
                @* <span asp-validation-for="@Model.NewDonor.CurrentCenter"></span>
                <br>
                <label asp-for="@Model.NewDonor.CurrentCenter"></label>
                <select asp-for="@Model.NewDonor.CurrentCenter">
                    @foreach(Center c in @Model.AllCenter)
                    {
                        <option asp-value="@c.CenterID">@c.CenterName</option>

                    }
                </select> *@
                <br>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>